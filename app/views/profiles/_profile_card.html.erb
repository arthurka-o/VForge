<div class=" bg-slate-200 rounded-2xl shadow overflow-hidden mx-auto">
  <% if @profile.avatar.attached? %>
    <div class="p-1 pb-0">
      <image class="rounded-2xl object-cover w-full h-full" src="<%= url_for(@profile.avatar) %>">
    </div>
  <% end %>

  
  <div class="p-6 pt-0">
    <%= turbo_frame_tag 'username' do %>
      <p class="font-semibold text-4xl mt-4"><%= @profile.username %></p>
    <% end %>

    <%= turbo_frame_tag 'bio' do %>
      <p><%= @profile.bio %></p>
    <% end %>
    
    <div class="pt-3">
      <p class=" text-gray-500">Interests</p>
      <%= render partial: 'traits/list', locals: { category: :interest } %>
    </div>

    <div class="pt-3">
      <p class=" text-gray-500">Basics</p>
      <%= render partial: 'traits/list', locals: { category: :basic } %>
    </div>
  </div>
</div>
